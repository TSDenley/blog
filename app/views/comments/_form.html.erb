<%= form_for( [@post, @post.comments.build] ) do |f| %>
	<div class="form-group">
		<%= f.label :commenter %>
		<%= f.text_field :commenter, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, rows: "5", class: "form-control" %>
	</div>
	<%= f.submit class: "btn btn-default" %>
<% end %>