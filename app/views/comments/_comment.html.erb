<%
#### Partial for each comment.
 %>

<li class="comment list-group-item">
	<%= link_to( [comment.post, comment], title: "Delete", class: "btn btn-default btn-sm pull-right", method: :delete, data: { confirm: "Do you want to delete this comment?" } ) do %>
		<span class="glyphicon glyphicon-trash"></span>
	<% end %>

	<p>
		<strong><%= comment.commenter %></strong>
	</p>

	<p>
		<%= comment.body %>
	</p>
</li>