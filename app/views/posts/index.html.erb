<%
#### List all posts.
 %>

<h1>All Posts</h1>

<%= link_to(new_post_path, class: "btn btn-default btn-sm") do %>
	<span class="glyphicon glyphicon-plus-sign"></span> New Post
<% end %>

<hr>


	<% @posts.each do |post| %>
		<p class="btn-group pull-right">
			<td>
				<%= link_to( post, title: "View", class: "btn btn-default btn-sm" ) do %>
					<span class="glyphicon glyphicon-eye-open"></span>
				<% end %>
			</td>
			<td>
				<%= link_to( edit_post_path(post), title: "Edit", class: "btn btn-default btn-sm" ) do %>
					<span class="glyphicon glyphicon-cog"></span>
				<% end %>
			</td>
			<td>
				<%= link_to( post_path(post), title: "Delete", class: "btn btn-default btn-sm", method: :delete, data: { confirm: "Do you want to delete this post?" } ) do %>
					<span class="glyphicon glyphicon-trash"></span>
				<% end %>
			</td>
		</p> <!-- btn-group -->

		<h2><%= link_to post.title, post %></h2>

		<p><%= truncate( post.text, length: 200 ) %></p>

		<hr>

	<% end %>