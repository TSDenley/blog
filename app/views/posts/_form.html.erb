<%
#### Form for adding & editing posts.
 %>

<%= form_for @post do |f|  %>

	<% # Check if we are returning with an error.
	   # If so, display error message.
	%>
	<% if @post.errors.any? %>
		<div class="alert alert-danger">

			<p><strong><%= pluralize( @post.errors.count, "error" ) %> prohibited this post from being saved:</strong></p>

			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>

		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :title  %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :text %>
		<%= f.text_area :text, rows: "10", class: "form-control" %>
	</div>

	<p>
		<%= f.submit class: "btn btn-default btn-lg" %>
	</p>

<% end %>